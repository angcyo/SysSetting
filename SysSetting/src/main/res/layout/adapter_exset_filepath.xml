<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="1dp"
        android:background="@drawable/normal_bt_selector"
        android:orientation="horizontal"
        style="@style/WmHw">

        <ImageView
            style="@style/WwHw"
            android:id="@+id/id_exset_img_file_ico"
            android:layout_marginLeft="@dimen/ds_mid"
            android:layout_marginRight="@dimen/ds_mid"
            android:src="@drawable/scan_folder_icon_pressed"/>

        <TextView
            android:id="@+id/id_exset_text_file_name"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            />

    </LinearLayout>

</LinearLayout>
