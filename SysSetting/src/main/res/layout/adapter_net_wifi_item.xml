<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        style="@style/WmHw"
        android:layout_marginBottom="1dp"
        android:background="@drawable/normal_bt_selector"
        android:padding="@dimen/ds_mid"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_net_wifi_ssid"
            style="@style/WwHw"
            android:text="SSID"
            android:textSize="@dimen/ds_normal_text_size"
            android:singleLine="true"
            android:ellipsize="end"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/id_net_wifi_state"
            android:singleLine="true"
            android:visibility="invisible"
            android:text="已连接"
            android:layout_marginRight="@dimen/ds_mid"
            android:textSize="@dimen/ds_normal_text_size"
            style="@style/WwHw"/>

        <RelativeLayout
            android:layout_width="23dp"
            android:layout_height="23dp">

            <ImageView
                android:id="@+id/id_net_wifi_level_img"
                style="@style/WwHw"
                android:src="@drawable/img_wifi_level_0"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/id_net_wifi_lock_img"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                style="@style/WwHw"
                android:src="@drawable/img_wifi_lock"
                android:layout_marginBottom="3dp"
                android:scaleType="centerInside"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
