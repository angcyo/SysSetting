<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/WmHm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        style="@style/WmHw"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ds_little">

        <TextView
            style="@style/WwHw"
            android:text="任务类型:"
            android:textSize="@dimen/ds_text_normal_size"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkedButton="@+id/id_rb_task_type_volume"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_rb_task_type_volume"
                style="@style/WwHw"
                android:layout_marginLeft="@dimen/ds_mid"
                android:layout_marginRight="@dimen/ds_mid"
                android:text="定时音量"
                android:textColor="@drawable/normal_menu_rb_tx_selector"/>

            <RadioButton
                android:id="@+id/id_rb_task_type_shutdown"
                style="@style/WwHw"
                android:layout_marginLeft="@dimen/ds_mid"
                android:layout_marginRight="@dimen/ds_mid"
                android:text="定时开关机"
                android:textColor="@drawable/normal_menu_rb_tx_selector"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        style="@style/WmHw"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ds_little">

        <TextView
            style="@style/WwHw"
            android:text="触发时间:"
            android:textSize="@dimen/ds_text_normal_size"/>

        <com.angcyo.view.ui.TimePicker style="@style/WwHw"></com.angcyo.view.ui.TimePicker>

    </LinearLayout>


